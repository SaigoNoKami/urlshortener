{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020",
      "strict": true,
      "noImplicitAny": true,
      "declaration": true,
      "noEmitOnError": true,
      "skipLibCheck": true,
      "removeComments": true,
      "allowJs": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./src",
    },
    "exclude": ["node_modules", "dist", "**/*.spec.ts"]
  }